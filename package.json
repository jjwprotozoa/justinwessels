{
  "name": "jjw-portfolio",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:json": "prettier --write public/data/projects.json",
    "type-check": "tsc --noEmit",
    "build:projects": "tsx scripts/build-projects.ts",
    "backfill:topics": "tsx scripts/backfill-topics.ts",
    "deploy:setup": "tsx scripts/deploy-setup.ts",
    "github:setup": "tsx scripts/setup-github.ts",
    "content:validate": "tsx scripts/validate-content.ts",
    "content:migrate": "tsx scripts/migrate-content.ts",
    "content:generate": "tsx scripts/generate-content-simple.ts",
    "analyze": "cross-env ANALYZE=true npm run build",
    "analyze:bundle": "tsx scripts/analyze-bundle.ts",
    "bundle:size": "npm run build && npx bundlesize",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@vercel/og": "^0.8.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "next-mdx-remote": "^5.0.0",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@octokit/graphql": "^8.0.0",
    "@tailwindcss/postcss": "^4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "bundlesize": "^0.18.2",
    "critters": "^0.0.23",
    "cross-env": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
